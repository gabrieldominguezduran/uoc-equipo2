---
import Arrow from "./Arrow.astro";
---

<style>
  .hero {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background-image: url("https://images.unsplash.com/photo-1498757581981-8ddb3c0b9b07?q=80&w=1976&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"); /* URL to the image */
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  .hero-wrapper {
    display: grid;
    place-content: center;
    min-height: 100vh;
    padding: 0 1rem;
    font-family: "Oswald", sans-serif;
    font-size: clamp(1.5rem, 16vw, 15rem);
    font-weight: 700;
    text-transform: uppercase;
    color: var(--primary-color);
  }
  .hero-wrapper > div {
    grid-area: 1/1/-1/-1;
  }
  .hero-top {
    clip-path: polygon(0% 0%, 100% 0%, 100% 48%, 0% 58%);
  }
  .hero-bottom {
    clip-path: polygon(0% 60%, 100% 50%, 100% 100%, 0% 100%);
    color: transparent;
    background: linear-gradient(177deg, black 53%, var(--primary-color) 65%);
    background-clip: text;
    -webkit-background-clip: text;
    transform: translateX(-0.02em);
  }
</style>
<main>
  <div class="hero">
    <section class="hero-wrapper">
      <div class="hero-top">Portugal</div>
      <div class="hero-bottom" aria-hidden="true">Portugal</div>
    </section>
    <Arrow />
  </div>
</main>
