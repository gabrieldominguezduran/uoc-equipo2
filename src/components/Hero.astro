---
import Arrow from "./Arrow.astro";
---

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    padding: 0;
    overflow: hidden;
  }
  img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hero-wrapper {
    display: grid;
    place-content: center;
    min-height: 100vh;
    padding: 0 2rem;
    padding-top: 25%;
    font-family: "Oswald", sans-serif;
    font-size: clamp(1.5rem, 14vw, 8rem);
    font-weight: 700;
    text-transform: uppercase;
    color: var(--primary-color);
  }
  .hero-wrapper > div {
    grid-area: 1/1/-1/-1;
  }
  .hero-top {
    clip-path: polygon(0% 0%, 100% 0%, 100% 48%, 0% 58%);
  }
  .hero-bottom {
    clip-path: polygon(0% 60%, 100% 50%, 100% 100%, 0% 100%);
    color: transparent;
    background: linear-gradient(177deg, black 53%, var(--primary-color) 65%);
    background-clip: text;
    -webkit-background-clip: text;
    transform: translateX(-0.02em);
  }

  span {
    color: #fff;
  }
</style>
<main>
  <div class="hero">
    <section class="hero-wrapper">
      <div class="image-wrapper">
        <img
          src="images/Rebelo_de_Sousa_Antonio_Costa_20minutos.png"
          alt="Photo of Rebelo de
Sousa and Antonio Costa"
        />
      </div>
      <div class="hero-top">Corrupção</div>
      <div class="hero-bottom" aria-hidden="true">Corrupção</div>
    </section>
    <Arrow />
  </div>
</main>
