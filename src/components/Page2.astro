<style>
  .page2-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto;
  }

  .page2-header {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    font-size: 3rem;
    background-color: black;
    color: white;
    padding: 0.5rem;
  }

  .page2-content {
    grid-column: 3 / 4;
    grid-row: 1 / 3;
    background-color: #f8f8f8;
    padding: 0.5rem;
  }

  .page2-figure > img {
    width: 100%;
  }

  @media (max-width: 900px) {
    .page2-grid {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
    }
  }

  @media (max-width: 500px) {
    .page2-header {
      font-size: 2rem;
    }
  }
</style>

