<style>
  .page2-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto;
  }

  .page2-header {
    grid-column: 1 / 4;
    grid-row: 1 / 2;
    place-self: center;
    font-size: 3rem;
    background-color: black;
    color: white;
    padding: 0.5rem;
  }

  .page2-content1 {
    grid-column: 2 / 4;
    grid-row: 2 / 3;
    font-size: 1.5rem;
    color: #f8f8f8;
    padding: 0.5rem;
  }

  .page2-content2 {
    grid-column: 1 / 3;
    grid-row: 3 / 4;
    font-size: 1.5rem;
    color: #f8f8f8;
    padding: 0.5rem;
  }
  .page2-content3 {
    grid-column: 2 / 4;
    grid-row: 4 / 5;
    font-size: 1.5rem;
    color: #f8f8f8;
    padding: 0.5rem;
  }

  .page2-photo {
    grid-column: 1 / 2;
    grid-row: 2 / 3;
    padding: 0.5rem;
  }
  .page2-photo2 {
    grid-column: 3 / 4;
    grid-row: 3 / 4;
    padding: 0.5rem;
  }
  .page2-photo3 {
    grid-column: 1 / 2;
    grid-row: 4 / 5;
    padding: 0.5rem;
  }

  .page2-figure > img {
    width: 100%;
  }

  figcaption {
    font-size: 0.7rem;
    color: #f8f8f8;
    padding: 0.5rem;
  }

  @media (max-width: 900px) {
    .page2-grid {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
    }
  }

  @media (max-width: 500px) {
    .page2-header {
      font-size: 2rem;
    }
  }
</style>

